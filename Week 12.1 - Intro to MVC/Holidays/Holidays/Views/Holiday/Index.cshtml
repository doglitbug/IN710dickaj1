@model Holidays.Models.Holiday

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        img.sanity{
            display:block;
            max-width:400px;
            max-height:400px;
            width: auto;
            height:auto;
        }
    </style>
</head>
<body>
    <div>
        <h3>It is @Model.daysUntil() day@(@Model.daysUntil()!=1?"s":"") until @Model.name</h3>
        <img class="sanity" src="~/images/@Model.imageName" />
    </div>
</body>
</html>